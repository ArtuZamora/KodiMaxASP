@model KodiMax.Models.Movie

@using (Html.BeginForm("Edit", "Movie", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Name, new { @id = "MovieName" } )

        <div class="form-group">
            <p class="control-label col-md-2"><b>Pelicula</b></p>
            <div class="col-md-10">
                @{Html.RenderAction("MoviesList");}
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b>Duración</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control", @id = "MovieDuration" } })
                @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b>Tipo</b></p>
            <div class="col-md-10">
                <select class="form-control" id="MovieType" name="Type">
                    <option value="Accion">Acción</option>
                    <option value="Romantica">Romantica</option>
                    <option value="Drama">Drama</option>
                    <option value="Terror">Terror</option>
                </select>
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger", @id = "MovieType" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><b>Imagen URL (solo web)</b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @id = "MovieImage" } })
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" id="EditMovie" />
            </div>
        </div>
    </div>
}