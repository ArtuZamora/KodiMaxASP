@model KodiMax.Models.Candy

@using (Html.BeginForm("Edit", "Candy", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Name, new { @id = "CandyName" })

    <div class="form-group">
        <p class="control-label col-md-2"><b>Nombre</b></p>
        <div class="col-md-10">
            @{Html.RenderAction("CandiesList");}
            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"><b>Tipo</b></p>
        <div class="col-md-10">
            <select class="form-control" id="CandyType" name="Type">
                <option value="Dulce">Dulce</option>
                <option value="Salado">Salado</option>
                <option value="Especial">Especial</option>
                <option value="Otro">Otro</option>
            </select>
            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"><b>Precio</b></p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @id = "CandyPrice" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"><b>Imagen</b></p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @id = "CandyImage" } })
            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success" id="ModifyCandy" />
        </div>
    </div>
</div>
}
